@page "/"
@model Alexia_Mircea_ProiectFinal.Pages.Clothes.IndexModel

@{
    ViewData["Title"] = "Clothes";
}

<h1>Clothes</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Clothing[0].ItemID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clothing[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clothing[0].Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clothing[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clothing[0].Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clothing[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clothing[0].Category.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Clothing) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
